<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listings", properties_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Bookings", your_bookings_path, class: "sidebar-link active" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading" style="background-color:#BBD7AF">
  <strong><h2 style="color:#FFFFFF">Your Bookings</h2><strong>
  </strong></strong></div>
			<div class="panel-body">

				<% @trips.each do |trip| %>
					<div class="row">
						<div class="col-md-2">
							<%= trip.start_date.strftime('%v') %>
						</div>
						<div class="col-md-6">
							<%= link_to property_path(trip.property) do %>
								<%= image_tag trip.property.photos[0].image.url(:thumb) if trip.property.photos.length > 0 %>
							<% end %>
						</div>
						<div class="col-md-2">
							<%= link_to user_path(trip.property.user) do %>
								<%= image_tag avatar_url(trip.property.user), class: "img-circle avatar-medium" %>
							<% end %>
						</div>
						<div class="col-md-2 right">
							<h4>$<%= trip.total %></h4>
						</div>
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>
