<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listings", properties_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Bookings", your_bookings_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading" style="background-color:#BBD7AF">
  <strong><h2 style="color:#FFFFFF">Listings</h2><strong>
  </strong></strong></div>
			<div class="panel-body">

				<% @properties.each do |property| %>
					<div class="row">
						<div class="col-md-1">
							<%= link_to "", property, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-times delete-listing" %>
						</div>
						<div class="col-md-3">
							<%= image_tag property.photos[0].image.url(:thumb) if property.photos.length > 0 %>
						</div>
						<div class="col-md-6">
							<h4><a href="/properties/<%= property.id %>"><%= property.listing_name %></a></h4>
						</div>
						<div class="col-md-2 right">
							<%= link_to "Update", edit_property_path(property), class: "btn btn-primary" %>
						</div>
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>
